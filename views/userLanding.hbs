    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const ctx = document.getElementById('myChart').getContext('2d');

            const data = {
                labels: ['January', 'February', 'March', 'April', 'May', 'jun', 'july', 'aug', 'sept', 'oct', 'nov', 'dec'],
                datasets: [{
                    label: 'Monthly Customers',
                    data: [110, 243, 358, 412, 521, 633, 749, 812, 899, 927, 955, 991
                    ],
                    backgroundColor: 'green',
                    color: "blue",
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 3
                }]
            };

            const options = {
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            color: 'white' // Change X-axis label text color
                        }
                    },
                    x: {
                        beginAtZero: true,
                        ticks: {
                            color: 'white' // Change X-axis label text color
                        }
                    }
                }, plugins: {
                    legend: {
                        labels: {
                            color: 'white' // Change legend text color
                        }
                    }
                }
            };

            const myChart = new Chart(ctx, {
                type: 'bar',
                data: data,
                options: options
            });
        });
    </script>
